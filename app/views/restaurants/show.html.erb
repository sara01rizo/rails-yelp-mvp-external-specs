<div class="container">
  <div class="">
  <div class="">
    <h1 style="text-align:center">Restaurants<br><%= @restaurant.name %></h1>
      <% if @restaurant.category == "chinese" %>
        <%= 🎐%>

        <% elsif @pet.species == "Italian" %>
         <%= 🍕%>

        <% elsif @pet.species == "Japanese" %>
         <%= 🎎%>

         <% elsif @pet.species == "French" %>
          <%= 🥐%>

        <% elsif @pet.species == "Belgian" %>
          <%= 🍫%>
      <% end %>
  </div>
</div>
  <%= link_to "Back Home 🏡", root_path, class: "btn-go-home" %>
  <%= link_to "Edit the Restaurant", edit_restaurant_path(@restaurant), class: "btn-go-home" %>
  <%= link_to "Delete #{@restaurant.name}", restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this #{@restaurant.name}?"}, class: "btn-go-home"%>
  <div class="row mt-4">
    <h3>Address: <span style="color:white"><%= @restaurant.address %> <span></h3>
    <h3>Category: <span style="color:white"><%= @restaurant.category.capitalize %><span></h3>
    <h3>Raiting: <span style="color:white"><%= @review.raiting %> <span></h3>
  </div>
</div>
